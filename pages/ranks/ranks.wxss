/* game_modes.wxss */
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.title {
    font-weight: bold;
    font-size: 10vh;
}

.backbutton {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    position: fixed;
    bottom: 5vh;
    right: 10vh;
}

.button {
    font-size: 7px;
}

.logo {
    height: 30px;
    width: 30px;
}

.list1 {
    display: flex;
    justify-content: left;
    flex-direction: column;
    margin-right: 1vh;
}

.list2 {
    display: flex;
    justify-content: left;
    flex-direction: column;
    margin-right: 8vh;
}

.list-group {
    display: flex;
}

.item {
    margin-top: 2vh;
}
