/* game_modes.wxss */
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

view {
    color: #22223b;
    font-weight: bold;
}

.title {
    font-weight: bold;
    font-size: 12vh;
}

.modes {
    margin: 1vh;
}

.mode-option {
    display: flex;
    align-items: center;
    margin: 3vh;
}

.mode-icon {
    width: 16vh;
    height: 16vh;
    margin-right: 3vh;
}

.mode-label {
    font-size: 4.5vh;
}

.backbutton {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    position: fixed;
    bottom: 5vh;
    right: 10vh;
}

.button {
    font-size: 7px;
}

.logo {
    height: 30px;
    width: 30px;
}
  